      &lt;span style=&#34;color: #f92672&#34;&gt;&amp;quot;remote-directory&amp;quot;&lt;/span&gt; &lt;span style=&#34;color: #f8f8f2&#34;&gt;:&lt;/span&gt; &lt;span style=&#34;color: #e6db74&#34;&gt;&amp;quot;/data&amp;quot;&lt;/span&gt;
